<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nama Target -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTargetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Target" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Jumlah Target -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTargetAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Target"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Jumlah Saat Ini -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editCurrentAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Saat Ini (opsional)"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Pilih Tanggal -->
    <Button
        android:id="@+id/btnPickTargetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Tanggal Target"
        android:layout_marginTop="16dp" />

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/btnSaveTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Target"
        android:layout_marginTop="8dp" />

</LinearLayout>